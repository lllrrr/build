#!/bin/sh /etc/rc.common
# wulishui 20200120-20200130 v4.1.0
# Author: wulishui <wulishui@gmail.com>

sum=$(uci get PwdHackDeny.PwdHackDeny.sum 2>/dev/null)
localIP=$(uci get network.lan.ipaddr 2>/dev/null| awk -F '.' '{print $1"."$2"."$3}' 2>/dev/null)
localIPV6=$(uci get network.globals.ula_prefix 2>/dev/null| awk -F ':' '{print $1":"$2":"$3}' 2>/dev/null)

cat /proc/net/arp | grep 'lan' | awk '{if(NR!=0) print $1" "$4}'|tr '[a-z]' '[A-Z]' > /tmp/PwdHackDeny/dhcp.leases
fucku=`cat /tmp/PwdHackDeny/syslog.tail 2>/dev/null`
logtail=`logread|sed -n -e '/'"$fucku"'/='|tail -1 2>/dev/null`
 if [ -n "$logtail" ]; then
   let logtail+=1
   syslog=`logread|tail +"$logtail"|uniq -i|sed '/^ *$/d'|tee /tmp/PwdHackDeny/syslog.tmp |tail -1|awk '{print $4}'`
    if [ -n "$syslog" ]; then
    echo "$syslog" > /tmp/PwdHackDeny/syslog.tail
    fi
 else
     logread|sed '/^ *$/d'|tee /tmp/PwdHackDeny/syslog.tmp |tail -1|awk '{print $4}' > /tmp/PwdHackDeny/syslog.tail
 fi
#-------------------------------#syslog.tmp用于截取IP地址|取最后一条取4列加入syslog.tail
#---------------------------------------------SSH------------------------------------------直接可用于ssh日志展示
cat /tmp/PwdHackDeny/syslog.tmp  2>/dev/null|grep -E 'dropbear.*[Pp]assword'|tee -a /tmp/PwdHackDeny/badip.log.ssh |grep "Bad password attempt"|tee /tmp/PwdHackDeny/badip.toip6.ssh|grep -o -E "(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])" > /tmp/PwdHackDeny/ssh.ip.tmp 2>/dev/null
cat /tmp/PwdHackDeny/badip.toip6.ssh  2>/dev/null|grep -o -E "([a-f0-9]{1,4}(:[a-f0-9]{1,4}){7}|[a-f0-9]{1,4}(:[a-f0-9]{1,4}){0,7}::[a-f0-9]{0,4}(:[a-f0-9]{1,4}){0,7})" |sed '/^'"$localIPV6"'/d'|sort -n| uniq -i |sed '/^ *$/d' > /tmp/PwdHackDeny/ssh.ip6.tmp 2>/dev/null

if [ -s /tmp/PwdHackDeny/ssh.ip.tmp ]; then
cat /tmp/PwdHackDeny/ssh.ip.tmp  2>/dev/null|sed '/^'"$localIP"'/d' >> /tmp/PwdHackDeny/badip.ssh.tmp #累加到IP名单库，直接用于次数统计
cat /tmp/PwdHackDeny/ssh.ip.tmp  2>/dev/null|grep ^"$localIP" > /tmp/PwdHackDeny/badip.ssh.local #用于换成MAC
rm -f /tmp/PwdHackDeny/badmac.ssh.log.tmp 2>/dev/null
badIPlistssh1=`cat /tmp/PwdHackDeny/badip.ssh.local 2>/dev/null`
sumssh1=`cat /tmp/PwdHackDeny/badip.ssh.local | wc -l 2>/dev/null`
if [[ $sumssh1 -ne 0 ]];then 
    for i in $badIPlistssh1
	do
	#--------------------------------------------------------------------->>累加到名单库，直接用于MAC名单库展示、计算累积次数
       grep "$i" /tmp/PwdHackDeny/dhcp.leases |awk '{print $(1)" -> "$(2)}' >> /tmp/PwdHackDeny/badmac.ssh.tmp
	done
fi

if [ -s /tmp/PwdHackDeny/ssh.ip6.tmp ]; then
cat /tmp/PwdHackDeny/ssh.ip6.tmp  2>/dev/null|sed '/^'"$localIPV6"'/d' >> /tmp/PwdHackDeny/badip6.ssh.tmp #累加到IP名单库，直接用于次数统计
fi

cat /tmp/PwdHackDeny/badip.ssh.tmp   2>/dev/null|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}' > /tmp/PwdHackDeny/badip.ssh #用于检查IPSET_ip是否已加入、加入ip名单库展示
cat /tmp/PwdHackDeny/badmac.ssh.tmp  2>/dev/null|awk '{print $3}'|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}'|sort -n|uniq -i|sed '/^ *$/d' > /tmp/PwdHackDeny/badmac.ssh #用于检查IPSET_mac是否已加入
cat /tmp/PwdHackDeny/badip6.ssh.tmp  2>/dev/null|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}' > /tmp/PwdHackDeny/badip6.ssh #用于检查IPSET_ip是否已加入、加入ip名单库展示

#-------------------------------------------------------------------------------------------add ipset---------------------------------------------------------------------------------------
ipset list PwdHackDenySSH 2>/dev/null|grep -o -E "(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenySSH.ipset
cat /tmp/PwdHackDeny/badip.ssh /tmp/PwdHackDeny/PwdHackDenySSH.ipset  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addedbadipSSH
cat /tmp/PwdHackDeny/badip.ssh /tmp/PwdHackDeny/addedbadipSSH         2>/dev/null| sort | uniq -u |sed '/^'"$localIP"'/d'|sed '/^ *$/d'|sed 's/^/add '"PwdHackDenySSH"' &/g' > /tmp/PwdHackDeny/PwdHackDenySSH.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenySSH.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenySSH.to.add 2>/dev/null
fi

ipset list PwdHackDenySSH_mac 2>/dev/null|grep -o -E "([A-Fa-f0-9]{2}[:-]){5}[A-Fa-f0-9]{2}"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenySSH_mac.ipset
cat /tmp/PwdHackDeny/badmac.ssh /tmp/PwdHackDeny/PwdHackDenySSH_mac.ipset  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addedbadmacSSH
cat /tmp/PwdHackDeny/badmac.ssh /tmp/PwdHackDeny/addedbadmacSSH            2>/dev/null| sort | uniq -u |sed '/^ *$/d'|sed 's/^/add '"PwdHackDenySSH_mac"' &/g' > /tmp/PwdHackDeny/PwdHackDenySSH_mac.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenySSH_mac.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenySSH_mac.to.add 2>/dev/null
fi

ipset list PwdHackDenySSH6 2>/dev/null|grep -o -E "([a-f0-9]{1,4}(:[a-f0-9]{1,4}){7}|[a-f0-9]{1,4}(:[a-f0-9]{1,4}){0,7}::[a-f0-9]{0,4}(:[a-f0-9]{1,4}){0,7})"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenySSH6.ipset
cat /tmp/PwdHackDeny/badip6.ssh /tmp/PwdHackDeny/PwdHackDenySSH6.ipset| sort | uniq -d > /tmp/PwdHackDeny/addedbadipSSHip6
cat /tmp/PwdHackDeny/badip6.ssh /tmp/PwdHackDeny/addedbadipSSHip6       | sort | uniq -u |sed '/^'"$localIPV6"'/d'|sed '/^ *$/d'|sed 's/^/add '"PwdHackDenySSH6"' &/g' > /tmp/PwdHackDeny/PwdHackDenySSH6.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenySSH6.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenySSH6.to.add 2>/dev/null
fi

#-------------------------------------------------------------------------------------------log---------------------------------------------------------------------------------------
cat /tmp/PwdHackDeny/badip.ssh /etc/SSHbadip.log 2>/dev/null  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addlistSSH 2>/dev/null
cat /tmp/PwdHackDeny/badip.ssh /tmp/PwdHackDeny/addlistSSH    2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/SSHbadip.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/SSHbadip.log ]; then
cat /tmp/PwdHackDeny/SSHbadip.log >> /etc/SSHbadip.log 2>/dev/null
fi

cat /tmp/PwdHackDeny/badip6.ssh /etc/SSHbadip.log 2>/dev/null  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addlist6SSH 2>/dev/null
cat /tmp/PwdHackDeny/badip6.ssh /tmp/PwdHackDeny/addlist6SSH   2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/SSHbadip6.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/SSHbadip6.log ]; then
cat /tmp/PwdHackDeny/SSHbadip6.log >> /etc/SSHbadip.log 2>/dev/null
fi

rm -f /tmp/PwdHackDeny/badmac.ssh.log.tmp 2>/dev/null
badIPlistssh1=`cat /tmp/PwdHackDeny/badmac.ssh  2>/dev/null`
sumssh1=`cat /tmp/PwdHackDeny/badmac.ssh | wc -l  2>/dev/null`
if [[ $sumssh1 -ne 0 ]];then 
    for i in $badIPlistssh1
	do
       grep "$i" /tmp/PwdHackDeny/badmac.ssh.tmp  2>/dev/null|awk '{print }' >> /tmp/PwdHackDeny/badmac.ssh.log.tmp
	done
fi
cat /tmp/PwdHackDeny/badmac.ssh.log.tmp 2>/dev/null|sort -n|uniq -i|sed '/^ *$/d' > /tmp/PwdHackDeny/badmac.ssh.log
cat /tmp/PwdHackDeny/badmac.ssh.log /etc/SSHbadip.log 2>/dev/null   2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addlistsshmac 2>/dev/null
cat /tmp/PwdHackDeny/badmac.ssh.log /tmp/PwdHackDeny/addlistsshmac  2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/SSHbadmac.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/SSHbadmac.log ]; then
cat /tmp/PwdHackDeny/SSHbadmac.log >> /etc/SSHbadip.log 2>/dev/null
fi

#
fi

#---------------------------------------------WEB------------------------------------------直接可用于ssh日志展示
cat /tmp/PwdHackDeny/syslog.tmp  2>/dev/null|grep -E 'uhttpd.*login'|tee -a /tmp/PwdHackDeny/badip.log.web |grep "failed login on" |tee /tmp/PwdHackDeny/badip.toip6.web|grep -o -E "(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])" > /tmp/PwdHackDeny/web.ip.tmp 2>/dev/null
cat /tmp/PwdHackDeny/badip.toip6.web  2>/dev/null|grep -o -E "([a-f0-9]{1,4}(:[a-f0-9]{1,4}){7}|[a-f0-9]{1,4}(:[a-f0-9]{1,4}){0,7}::[a-f0-9]{0,4}(:[a-f0-9]{1,4}){0,7})"|sed '/^'"$localIPV6"'/d'|sort -n| uniq -i |sed '/^ *$/d' > /tmp/PwdHackDeny/web.ip6.tmp 2>/dev/null

if [ -s /tmp/PwdHackDeny/web.ip.tmp ]; then
cat /tmp/PwdHackDeny/web.ip.tmp  2>/dev/null|sed '/^'"$localIP"'/d' >> /tmp/PwdHackDeny/badip.web.tmp #累加到IP名单库，直接用于次数统计
cat /tmp/PwdHackDeny/web.ip.tmp  2>/dev/null|grep ^"$localIP" > /tmp/PwdHackDeny/badip.web.local #用于换成MAC
rm -f /tmp/PwdHackDeny/badmac.web.log.tmp 2>/dev/null
badIPlistweb1=`cat /tmp/PwdHackDeny/badip.web.local 2>/dev/null`
sumweb1=`cat /tmp/PwdHackDeny/badip.web.local  2>/dev/null| wc -l `
if [[ $sumweb1 -ne 0 ]];then 
    for i in $badIPlistweb1
	do
	#--------------------------------------------------------------------->>累加到名单库，直接用于MAC名单库展示、计算累积次数
       grep "$i" /tmp/PwdHackDeny/dhcp.leases |awk '{print $(1)" -> "$(2)}' >> /tmp/PwdHackDeny/badmac.web.tmp
	done
fi

if [ -s /tmp/PwdHackDeny/web.ip6.tmp ]; then
cat /tmp/PwdHackDeny/web.ip6.tmp  2>/dev/null|sed '/^'"$localIPV6"'/d' >> /tmp/PwdHackDeny/badip6.web.tmp #累加到IP名单库，直接用于次数统计
fi

cat /tmp/PwdHackDeny/badip.web.tmp   2>/dev/null|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}' > /tmp/PwdHackDeny/badip.web #用于检查IPSET_ip是否已加入、加入ip名单库展示
cat /tmp/PwdHackDeny/badmac.web.tmp  2>/dev/null|awk '{print $3}'|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}'|sort -n|uniq -i|sed '/^ *$/d' > /tmp/PwdHackDeny/badmac.web #用于检查IPSET_mac是否已加入
cat /tmp/PwdHackDeny/badip6.web.tmp  2>/dev/null|sort|uniq -c|sort -k 1 -n -r|awk '{if($1>='"$sum"') print $2}' > /tmp/PwdHackDeny/badip6.web #用于检查IPSET_ip是否已加入、加入ip名单库展示

#-------------------------------------------------------------------------------------------add ipset---------------------------------------------------------------------------------------
ipset list PwdHackDenyWEB 2>/dev/null|grep -o -E "(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenyWEB.ipset
cat /tmp/PwdHackDeny/badip.web /tmp/PwdHackDeny/PwdHackDenyWEB.ipset| sort | uniq -d > /tmp/PwdHackDeny/addedbadipWEB
cat /tmp/PwdHackDeny/badip.web /tmp/PwdHackDeny/addedbadipWEB       | sort | uniq -u |sed '/^'"$localIP"'/d'|sed '/^ *$/d'|sed 's/^/add '"PwdHackDenyWEB"' &/g' > /tmp/PwdHackDeny/PwdHackDenyWEB.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenyWEB.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenyWEB.to.add 2>/dev/null
fi

ipset list PwdHackDenyWEB_mac 2>/dev/null|grep -o -E "([A-Fa-f0-9]{2}[:-]){5}[A-Fa-f0-9]{2}"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenyWEB_mac.ipset
cat /tmp/PwdHackDeny/badmac.web /tmp/PwdHackDeny/PwdHackDenyWEB_mac.ipset  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addedbadmacWEB
cat /tmp/PwdHackDeny/badmac.web /tmp/PwdHackDeny/addedbadmacWEB            2>/dev/null| sort | uniq -u |sed '/^ *$/d'|sed 's/^/add '"PwdHackDenyWEB_mac"' &/g' > /tmp/PwdHackDeny/PwdHackDenyWEB_mac.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenyWEB_mac.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenyWEB_mac.to.add 2>/dev/null
fi

ipset list PwdHackDenyWEB6 2>/dev/null|grep -o -E "([a-f0-9]{1,4}(:[a-f0-9]{1,4}){7}|[a-f0-9]{1,4}(:[a-f0-9]{1,4}){0,7}::[a-f0-9]{0,4}(:[a-f0-9]{1,4}){0,7})"|sed '/^ *$/d' > /tmp/PwdHackDeny/PwdHackDenyWEB6.ipset
cat /tmp/PwdHackDeny/badip6.web /tmp/PwdHackDeny/PwdHackDenyWEB6.ipset| sort | uniq -d > /tmp/PwdHackDeny/addedbadipWEBip6
cat /tmp/PwdHackDeny/badip6.web /tmp/PwdHackDeny/addedbadipWEBip6       | sort | uniq -u |sed '/^'"$localIPV6"'/d'|sed '/^ *$/d'|sed 's/^/add '"PwdHackDenyWEB6"' &/g' > /tmp/PwdHackDeny/PwdHackDenyWEB6.to.add
if [ -s /tmp/PwdHackDeny/PwdHackDenyWEB6.to.add ]; then
ipset restore -f /tmp/PwdHackDeny/PwdHackDenyWEB6.to.add 2>/dev/null
fi

#-------------------------------------------------------------------------------------------log---------------------------------------------------------------------------------------
cat /tmp/PwdHackDeny/badip.web /etc/WEBbadip.log 2>/dev/null  2>/dev/null| sort | uniq -d > /tmp/PwdHackDeny/addlistWEB 2>/dev/null
cat /tmp/PwdHackDeny/badip.web /tmp/PwdHackDeny/addlistWEB    2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/WEBbadip.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/WEBbadip.log ]; then
cat /tmp/PwdHackDeny/WEBbadip.log >> /etc/WEBbadip.log 2>/dev/null
fi

cat /tmp/PwdHackDeny/badip6.web /etc/WEBbadip.log 2>/dev/null | sort | uniq -d > /tmp/PwdHackDeny/addlist6WEB 2>/dev/null
cat /tmp/PwdHackDeny/badip6.web /tmp/PwdHackDeny/addlist6WEB 2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/WEBbadip6.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/WEBbadip6.log ]; then
cat /tmp/PwdHackDeny/WEBbadip6.log >> /etc/WEBbadip.log 2>/dev/null
fi

rm -f /tmp/PwdHackDeny/badmac.web.log.tmp 2>/dev/null
badIPlistweb1=`cat /tmp/PwdHackDeny/badmac.web 2>/dev/null `
sumweb1=`cat /tmp/PwdHackDeny/badmac.web  2>/dev/null| wc -l`
if [[ $sumweb1 -ne 0 ]];then 
    for i in $badIPlistweb1
	do
       grep "$i" /tmp/PwdHackDeny/badmac.web.tmp |awk '{print }' >> /tmp/PwdHackDeny/badmac.web.log.tmp
	done
fi
cat /tmp/PwdHackDeny/badmac.web.log.tmp 2>/dev/null|sort -n|uniq -i|sed '/^ *$/d' > /tmp/PwdHackDeny/badmac.web.log
cat /tmp/PwdHackDeny/badmac.web.log /etc/WEBbadip.log 2>/dev/null  | sort | uniq -d > /tmp/PwdHackDeny/addlistwebmac 2>/dev/null
cat /tmp/PwdHackDeny/badmac.web.log /tmp/PwdHackDeny/addlistwebmac  2>/dev/null| sort | uniq -u |sed '/^ *$/d' > /tmp/PwdHackDeny/WEBbadmac.log 2>/dev/null
if [ -s /tmp/PwdHackDeny/WEBbadmac.log ]; then
cat /tmp/PwdHackDeny/WEBbadmac.log >> /etc/WEBbadip.log 2>/dev/null
fi

#
fi


